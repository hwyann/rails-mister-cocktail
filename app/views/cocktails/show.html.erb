<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="d-flex justify-content-between">
    <div class="cocktail-description">
      <h2>Description</h2>
      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %></p>
        <%= link_to 'Add description', new_cocktail_dose_path(@cocktail), class: "btn btn-light" %>
        <%= link_to 'Delete description', dose_path(dose), method: :delete, data: {confirm: 'Confirm deleting this description?'}, class: "btn btn-light" %>
      <% end %>
    </div>
    <div class="cocktail-ingredient">
      <h2>Ingredients</h2>
      <p>something</p>
    </div>
  </div>
  <%= link_to 'Back', cocktails_path, class: 'btn btn-light' %>
</div>